@page
@model CarDealerWeb.Pages.DetailsModel
@{
    ViewData["Title"] = "Szczegóły samochodu";
}


<h2>@Model.Car.Brand @Model.Car.Model</h2>

<ul>
    <li>Rok produkcji: @Model.Car.Year</li>
    <li>Cena: @Model.Car.Price zł</li>
    <li>Opis: @Model.Car.Description</li>
</ul>

<h4>Galeria zdjęć</h4>
<div class="row">
    @foreach (var image in Model.Car.Images)
    {
        <div class="col-md-3 mb-3">
            <a href="/uploads/@image.FileName" data-lightbox="car-gallery" data-title="@Model.Car.Brand @Model.Car.Model">
                <img src="/uploads/@image.FileName" class="img-fluid rounded shadow-sm" />
            </a>
        </div>
    }
</div>

<a class="btn btn-secondary" href="/">⬅️ Powrót</a>